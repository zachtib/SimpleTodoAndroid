<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation.xml"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.zachtib.simpletodo.ui.todolist.TodoListFragment"
        android:label="todo_list_fragment"
        tools:layout="@layout/todo_list_fragment" >
        <action
            android:id="@+id/navigateToCreateTodo"
            app:destination="@id/createTodoFragment" />
    </fragment>
    <fragment
        android:id="@+id/createTodoFragment"
        android:name="com.zachtib.simpletodo.ui.createtodo.CreateTodoFragment"
        android:label="CreateTodoFragment"
        tools:layout="@layout/create_todo_fragment"/>
</navigation>